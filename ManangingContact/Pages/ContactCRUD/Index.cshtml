@page
@model ManangingContact.Pages.ContactCRUD.IndexModel

@{
    ViewData["Title"] = "Contact List";
}
<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>    
</div>
<br />
@*<p>   
    <a type="button" class="btn btn-outline-success" asp-page="Create">Create New</a>
</p>
